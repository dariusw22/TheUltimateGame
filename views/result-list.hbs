<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><strong>{{description}}</strong></h3>
            </div>
            
            <div class="panel-body" id="well-section">
                {{#each books}}
                    <div class="well" id="book-well-{{@index}}">
                        <h2>Title: {{title}}</h2>
                        <h3>Author: {{author}}</h3>
                        <h3>Genre: {{genre}}</h3>
                        <h3>Pages: {{pages}}</h3>
                    </div>
                {{else}}
                    <h2>No books match your criteria.</h2>
                {{/each}}
            </div>
        </div>
    </div>      
</div>